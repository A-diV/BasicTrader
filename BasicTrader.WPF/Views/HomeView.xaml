<UserControl x:Class="Trader.WPF.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trader.WPF.Views"
             
             xmlns:controls="clr-namespace:BasicTrader.WPF.Controls" 
             
             xmlns:viewmodels="clr-namespace:BasicTrader.WPF.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:IndexViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="HOME VIEW" Background="Azure"/>
        
        <controls:IndexCard Grid.Row="1" Margin="0 10" HorizontalAlignment="Left" Background="Azure"/>
        
    </Grid>
</UserControl>
